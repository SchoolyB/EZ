/*
 * Test: Does builtin len() work on strings without 'using arrays'?
 */

import @std

using std

do main() {
    println("=== Testing builtin len() ===")
    println("")

    /* Test 1: len() on string without arrays module */
    println("Test 1: len() on string (no arrays import)")
    temp s string = "Hello"
    temp str_len int = len(s)
    println("  len(\"Hello\") = ${str_len}")
    println("")

    /* Test 2: len() on array */
    println("Test 2: len() on array")
    temp arr [int] = {1, 2, 3, 4, 5}
    temp arr_len int = len(arr)
    println("  len({1,2,3,4,5}) = ${arr_len}")
    println("")

    println("=== Test Complete ===")
}
