{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "EZ",
  "patterns": [
    { "include": "#comments" },
    { "include": "#attributes" },
    { "include": "#imports" },
    { "include": "#keywords" },
    { "include": "#storage" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#chars" },
    { "include": "#numbers" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.ez",
          "match": "//.*$"
        },
        {
          "name": "comment.block.ez",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.ez",
          "match": "@\\w+",
          "captures": {
            "0": { "name": "entity.name.tag.ez" }
          }
        },
        {
          "name": "meta.attribute.parens.ez",
          "begin": "@\\(",
          "end": "\\)",
          "beginCaptures": {
            "0": { "name": "entity.name.tag.ez" }
          },
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            {
              "name": "variable.parameter.ez",
              "match": "\\w+"
            }
          ]
        },
        {
          "name": "meta.suppress.ez",
          "begin": "@suppress\\(",
          "end": "\\)",
          "beginCaptures": {
            "0": { "name": "entity.name.tag.ez" }
          },
          "patterns": [
            {
              "name": "constant.other.error-code.ez",
              "match": "[WE]\\d+"
            },
            {
              "name": "variable.parameter.ez",
              "match": "\\w+"
            }
          ]
        }
      ]
    },
    "imports": {
      "patterns": [
        {
          "name": "meta.import.ez",
          "match": "(import)\\s+(\\w+)(@)(\\w+)",
          "captures": {
            "1": { "name": "keyword.control.import.ez" },
            "2": { "name": "variable.other.alias.ez" },
            "3": { "name": "keyword.operator.ez" },
            "4": { "name": "entity.name.namespace.ez" }
          }
        },
        {
          "name": "meta.import.ez",
          "match": "(import)\\s+(@)(\\w+)",
          "captures": {
            "1": { "name": "keyword.control.import.ez" },
            "2": { "name": "keyword.operator.ez" },
            "3": { "name": "entity.name.namespace.ez" }
          }
        },
        {
          "name": "keyword.control.using.ez",
          "match": "\\busing\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ez",
          "match": "\\b(if|or|otherwise|for|for_each|in|range|break|continue|return|as_long_as|loop)\\b"
        },
        {
          "name": "keyword.other.ez",
          "match": "\\b(do|struct|enum)\\b"
        }
      ]
    },
    "storage": {
      "patterns": [
        {
          "name": "storage.modifier.ez",
          "match": "\\b(temp|const|private)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.ez",
          "match": "\\b(do)\\s+(\\w+)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.other.ez" },
            "2": { "name": "entity.name.function.ez" }
          }
        },
        {
          "name": "entity.name.function.builtin.ez",
          "match": "\\b(println|print|len|typeof|new)\\b"
        },
        {
          "name": "support.function.module.ez",
          "match": "\\b(std|arrays|strings|math|time|io)\\.(\\w+)\\b",
          "captures": {
            "1": { "name": "entity.name.namespace.ez" },
            "2": { "name": "entity.name.function.ez" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.ez",
          "match": "\\b(int|float|string|char|bool)\\b"
        },
        {
          "name": "meta.type.array.ez",
          "match": "\\[(int|float|string|char|bool)(,\\s*\\d+)?\\]",
          "captures": {
            "1": { "name": "storage.type.ez" },
            "2": { "name": "constant.numeric.ez" }
          }
        },
        {
          "name": "meta.type.multidim-array.ez",
          "match": "\\[\\[(int|float|string|char|bool)\\]\\]",
          "captures": {
            "1": { "name": "storage.type.ez" }
          }
        },
        {
          "name": "entity.name.type.ez",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.ez",
          "match": "\\b(true|false|nil)\\b"
        },
        {
          "name": "constant.other.enum.ez",
          "match": "\\b[A-Z][A-Z0-9_]*\\.[A-Z][A-Z0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ez",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ez",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "chars": {
      "patterns": [
        {
          "name": "string.quoted.single.ez",
          "match": "'([^'\\\\]|\\\\.)'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.ez",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.ez",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.ez",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.comparison.ez",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.membership.ez",
          "match": "\\b(in|!in|not_in)\\b"
        },
        {
          "name": "keyword.operator.assignment.ez",
          "match": "\\+=|-=|\\*=|/=|%=|="
        },
        {
          "name": "keyword.operator.arithmetic.ez",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.arrow.ez",
          "match": "->"
        }
      ]
    }
  },
  "scopeName": "source.ez"
}
