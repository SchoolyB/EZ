/*
 * import_and_use.ez - Test combined import & use syntax
 */

import & use @std, @strings, @arrays

do main() {
    println("=== Import & Use Test ===")
    temp passed int = 0
    temp failed int = 0

    // Test 1: std functions available without prefix
    temp msg string = "hello world"
    println("  testing println via import & use...")
    passed += 1

    // Test 2: strings functions available without prefix
    temp up_msg string = strings.upper(msg)
    if up_msg == "HELLO WORLD" {
        println("  [PASS] strings.upper via import & use")
        passed += 1
    } otherwise {
        println("  [FAIL] strings.upper: got ${up_msg}")
        failed += 1
    }

    // Test 3: arrays functions available without prefix
    temp arr [int] = {3, 1, 2}
    temp has_one bool = arrays.contains(arr, 1)
    if has_one {
        println("  [PASS] arrays.contains via import & use")
        passed += 1
    } otherwise {
        println("  [FAIL] arrays.contains failed")
        failed += 1
    }

    // Summary
    println("")
    println("Results: ${passed} passed, ${failed} failed")

    if failed > 0 {
        println("SOME TESTS FAILED")
    } otherwise {
        println("ALL TESTS PASSED")
    }
}
